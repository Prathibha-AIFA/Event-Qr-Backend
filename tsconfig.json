{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "dist"   // <- important: compiled JS goes here
  },
  "include": ["./**/*.ts"], 
  "exclude": ["node_modules"]
}
